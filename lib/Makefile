LIB := bap-vibes
SRC_FILES := $(wildcard **/*.ml) $(wildcard **/*.mli)


#####################################################
# DEFAULT
#####################################################

.DEFAULT_GOAL := all

.PHONY: all
all: 
	$(MAKE) clean
	$(MAKE) build


#####################################################
# CLEAN
#####################################################

.PHONY: clean
clean: 
	dune clean


#####################################################
# BUILD
#####################################################

build: $(SRC_FILES)
	dune build -p $(LIB)


#####################################################
# INSTALL
#####################################################

.PHONY: install
install:
	opam install .

.PHONY: uninstall
uninstall:
	opam remove .


#####################################################
# TEST
#####################################################

test: build
	dune runtest tests
